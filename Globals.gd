extends Node

var money = 1000
var level = 1
var pizza = 5
var coffee = 5

func addMoney(amount):
	money += amount


func removeMoney(amount):
	money -= amount


func addLevel(amount):
	level += amount


func removeLevel(amount):
	level -= amount


func addPizza(amount):
	pizza += amount


func removePizza(amount):
	pizza -= amount


func addCoffee(amount):
	coffee += amount


func removeCoffee(amount):
	coffee -= amount
